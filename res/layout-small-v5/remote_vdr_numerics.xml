<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/remote_vdr_numerics_id"
  style="?body"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  <TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TableRow>
      <ImageButton
        style="?buttonPowerOn"
        android:tag="VDR.wol|VDR.wolinternet" />
      <Button
        style="?button"
        android:layout_weight="1"
        android:text="@string/remote_mute"
        android:tag="VDR.mute" />
      <Button
        style="?button"
        android:layout_weight="1"
        android:text="@string/remote_record"
        android:tag="VDR.record" />
      <ImageButton
        style="?buttonPowerOff"
        android:tag="VDR.power" />
    </TableRow>
  </TableLayout>
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1" />
  <TableLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    <TableRow>
      <Button
        style="?buttonSquare"
        android:text="@string/remote_menu"
        android:tag="VDR.menu" />
      <TextView
        style="?spacer"
        android:layout_weight="1" />
      <Button
        style="?buttonSquare"
        android:text="1"
        android:tag="VDR.1" />
      <Button
        style="?buttonSquare"
        android:text="2"
        android:tag="VDR.2" />
      <Button
        style="?buttonSquare"
        android:text="3"
        android:tag="VDR.3" />
    </TableRow>
    <TableRow>
      <TextView
        style="?spacer" />
      <TextView
        style="?spacer"
        android:layout_weight="1" />
      <Button
        style="?buttonSquare"
        android:text="4"
        android:tag="VDR.4" />
      <Button
        style="?buttonSquare"
        android:text="5"
        android:tag="VDR.5" />
      <Button
        style="?buttonSquare"
        android:text="6"
        android:tag="VDR.6" />
    </TableRow>
    <TableRow>
      <Button
        style="?buttonSquare"
        android:text="@string/remote_back"
        android:tag="VDR.back" />
      <TextView
        style="?spacer"
        android:layout_weight="1" />
      <Button
        style="?buttonSquare"
        android:text="7"
        android:tag="VDR.7" />
      <Button
        style="?buttonSquare"
        android:text="8"
        android:tag="VDR.8" />
      <Button
        style="?buttonSquare"
        android:text="9"
        android:tag="VDR.9" />
    </TableRow>
    <TableRow>
      <TextView
        style="?spacer" />
      <TextView
        style="?spacer"
        android:layout_weight="1" />
      <TextView
        style="?spacer" />
      <Button
        style="?buttonSquare"
        android:text="0"
        android:tag="VDR.0" />
      <TextView
        style="?spacer" />
    </TableRow>
  </TableLayout>
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1" />
</LinearLayout>

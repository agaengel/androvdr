<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="?body"
  android:id="@+id/remote_vdr_play_id"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  <TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TableRow>
      <Button
        style="?button"
        android:layout_height="58dip"
        android:layout_weight="1"
        android:text="@string/remote_records"
        android:tag="Activity.de.androvdr.activities.RecordingsActivity|VDR.recordings" />
      <TextSwitcher
        style="?spacer"
        android:layout_weight="1" />
      <Button
        style="?button"
        android:layout_height="58dip"
        android:layout_weight="1"
        android:text="Ok"
        android:tag="VDR.ok" />
    </TableRow>
  </TableLayout>
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="58dip" />
  <TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TableRow>
      <ImageButton
        style="?buttonRewind"
        android:layout_height="70dip"
        android:layout_weight="1"
        android:tag="VDR.fastrew" />
      <ImageButton
        style="?buttonForward"
        android:layout_weight="1"
        android:layout_height="70dip"
        android:tag="VDR.fastfwd" />
      <ImageButton
        style="?buttonSkipBackward"
        android:layout_height="70dip"
        android:layout_weight="1"
        android:tag="VDR.green" />
      <ImageButton
        style="?buttonSkipForward"
        android:layout_height="70dip"
        android:layout_weight="1"
        android:tag="VDR.yellow" />
    </TableRow>
    <TableRow>
      <ImageButton
        style="?buttonStop"
        android:layout_height="70dip"
        android:layout_weight="1"
        android:tag="VDR.stop" />
      <ImageButton
        style="?buttonPause"
        android:layout_height="70dip"
        android:layout_weight="1"
        android:tag="VDR.pause" />
      <ImageButton
        style="?buttonStart"
        android:layout_height="70dip"
        android:layout_weight="1"
        android:tag="VDR.play" />
    </TableRow>
  </TableLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Theme / Layout FvK -->
  <style name="header">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">4dip</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/header_background_dark</item>
  </style>
  <style name="header_light" parent="header">
    <item name="android:background">@drawable/header_background_light</item>
  </style>
  <style name="footer" parent="header">
      <item name="android:textStyle">normal</item>
  </style>
  <style name="footer_light" parent="header_light">
      <item name="android:textStyle">normal</item>
  </style>
  <style name="body">
    <item name="android:background">@drawable/keyboard_background</item>
    <item name="android:paddingBottom">4dip</item>
  </style>
  <style name="detailsElementBackground_dark">
    <item name="android:background">@drawable/panel_background_dark</item>
  </style>
  <style name="detailsElementBackground_light">
    <item name="android:background">@drawable/panel_background_light</item>
  </style>
  <style name="spacer">
    <item name="android:layout_width">62dip</item>
    <item name="android:layout_height">10dip</item>
  </style>
  <style name="spacerSmall" parent="@style/spacer">
    <item name="android:layout_height">8dip</item>
  </style>
  <style name="button" parent="@android:style/Widget.Button">
    <item name="android:layout_width">75dip</item>
    <item name="android:layout_height">50dip</item>
    <item name="android:background">@drawable/btn_remote</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:scaleType">center</item>
    <item name="android:onClick">onButtonClick</item>
    <item name="android:longClickable">true</item>
  </style>
  <style name="buttonSquare" parent="@style/button">
    <item name="android:layout_width">62dip</item>
    <item name="android:layout_height">62dip</item>
  </style>
  <style name="buttonUp" parent="@style/buttonSquare">
    <item name="android:src">@drawable/ic_arrow_up</item>
  </style>
  <style name="buttonDown" parent="@style/buttonSquare">
    <item name="android:src">@drawable/ic_arrow_down</item>
  </style>
  <style name="buttonLeft" parent="@style/buttonSquare">
    <item name="android:src">@drawable/ic_arrow_left</item>
  </style>
  <style name="buttonRight" parent="@style/buttonSquare">
    <item name="android:src">@drawable/ic_arrow_right</item>
  </style>
  <style name="buttonRewind" parent="@style/button">
    <item name="android:src">@drawable/ic_tango_seek_backward</item>
  </style>
  <style name="buttonForward" parent="@style/button">
    <item name="android:src">@drawable/ic_tango_seek_forward</item>
  </style>
  <style name="buttonSkipForward" parent="@style/button">
    <item name="android:src">@drawable/ic_tango_skip_forward</item>
  </style>
  <style name="buttonSkipBackward" parent="@style/button">
    <item name="android:src">@drawable/ic_tango_skip_backward</item>
  </style>
  <style name="buttonStop" parent="@style/button">
    <item name="android:src">@drawable/ic_tango_playback_stop</item>
  </style>
  <style name="buttonPause" parent="@style/button">
    <item name="android:src">@drawable/ic_tango_playback_pause</item>
  </style>
  <style name="buttonStart" parent="@style/button">
    <item name="android:src">@drawable/ic_tango_playback_start</item>
  </style>
  <style name="buttonPowerOn" parent="@style/button">
    <item name="android:layout_width">62dip</item>
    <item name="android:src">@drawable/ic_power_on</item>
  </style>
  <style name="buttonPowerOnSquare" parent="@style/buttonSquare">
    <item name="android:src">@drawable/ic_power_on</item>
  </style>
  <style name="buttonPowerOff" parent="@style/button">
    <item name="android:layout_width">62dip</item>
    <item name="android:src">@drawable/ic_power</item>
  </style>
  <style name="buttonPowerOffSquare" parent="@style/buttonSquare">
    <item name="android:src">@drawable/ic_power</item>
  </style>
 </resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="spacer">
    <item name="android:layout_width">72dip</item>
    <item name="android:layout_height">10dip</item>
  </style>
  <style name="button">
    <item name="android:layout_width">150dip</item>
    <item name="android:layout_height">64dip</item>
    <item name="android:background">@drawable/btn_remote</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">18dip</item>
    <item name="android:textStyle">bold</item>
    <item name="android:scaleType">center</item>
    <item name="android:onClick">onButtonClick</item>
    <item name="android:longClickable">true</item>
  </style>
  <style name="buttonSquareHeight" parent="@style/button">
    <item name="android:layout_height">72dip</item>
  </style>
  <style name="buttonSquare" parent="@style/button">
    <item name="android:layout_width">72dip</item>
    <item name="android:layout_height">72dip</item>
  </style>
  <style name="buttonPowerOn" parent="@style/button">
    <item name="android:layout_width">72dip</item>
    <item name="android:src">@drawable/ic_power_on</item>
  </style>
  <style name="buttonPowerOff" parent="@style/button">
    <item name="android:layout_width">72dip</item>
    <item name="android:src">@drawable/ic_power</item>
  </style>
</resources>
